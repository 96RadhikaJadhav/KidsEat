<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kidseat.kidseat"
    android:versionCode="1"
    android:versionName="1.0">


    <uses-permission android:name="com.kidseat.kidseat.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="com.kidseat.kidseat.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/kids_eat_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/kids_eat_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.kidseat.kidseat.organizer_activities.ManageEventActivity"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" /> <!-- <activity -->
        <activity android:name="com.kidseat.kidseat.organizer_activities.AddEventActivity" />
        <activity android:name="com.kidseat.kidseat.organizer_activities.OrganizerMainActivity" />
        <activity android:name="com.kidseat.kidseat.LoginActivity" />
        <activity
            android:name="com.kidseat.kidseat.SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.kidseat.kidseat.MainActivity"
            android:label="@string/title_activity_maps" />
        <activity android:name="com.kidseat.kidseat.EventDetailActivity" />
    </application>

</manifest>